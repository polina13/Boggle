<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/red"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mklgallegos.boggle.ui.ChangePasswordActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oldPasswordEditText"
        android:hint="old password"
        android:inputType="textPassword"
        android:width="225sp"
        android:theme="@style/AppTheme"
        android:textColorHint="@color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newPasswordEditText"
        android:width="225sp"
        android:hint="new password"
        android:inputType="textPassword"
        android:theme="@style/AppTheme"
        android:textColorHint="@color/white"
        android:layout_below="@+id/oldPasswordEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmNewPasswordEditText"
        android:inputType="textPassword"
        android:theme="@style/AppTheme"
        android:hint="confirm new password"
        android:width="225sp"
        android:textColorHint="@color/white"
        android:layout_below="@+id/newPasswordEditText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE PASSWORD"
        android:background="@color/white"
        android:textColor="@color/black"
        android:id="@+id/changePasswordButton"
        android:width="225sp"
        android:layout_below="@+id/confirmNewPasswordEditText"
        android:layout_alignLeft="@+id/confirmNewPasswordEditText"
        android:layout_alignStart="@+id/confirmNewPasswordEditText"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailEditText"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:width="225sp"
        android:theme="@style/AppTheme"
        android:textColorHint="@color/white"
        android:layout_above="@+id/oldPasswordEditText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
