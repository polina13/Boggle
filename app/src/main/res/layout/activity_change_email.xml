<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/red"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mklgallegos.boggle.ui.ChangeEmailActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oldEmailEditText"
        android:hint="old email address"
        android:inputType="textEmailAddress"
        android:width="225sp"
        android:theme="@style/AppTheme"
        android:textColorHint="@color/white"
        android:layout_above="@+id/passwordEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordEditText"
        android:width="225sp"
        android:hint="password"
        android:inputType="textPassword"
        android:theme="@style/AppTheme"
        android:textColorHint="@color/white"
        android:layout_above="@+id/newEmailEditText"
        android:layout_alignLeft="@+id/oldEmailEditText"
        android:layout_alignStart="@+id/oldEmailEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newEmailEditText"
        android:inputType="textEmailAddress"
        android:theme="@style/AppTheme"
        android:hint="new email address"
        android:width="225sp"
        android:textColorHint="@color/white"
        android:layout_above="@+id/updateEmailButton"
        android:layout_alignLeft="@+id/passwordEditText"
        android:layout_alignStart="@+id/passwordEditText"
        android:layout_marginBottom="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Email"
        android:background="@color/white"
        android:textColor="@color/black"
        android:id="@+id/updateEmailButton"
        android:width="225sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/newEmailEditText"
        android:layout_alignStart="@+id/newEmailEditText"
        android:layout_marginBottom="60dp" />
</RelativeLayout>
