<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mklgallegos.boggle">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BoggleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.GameActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".ui.ResultActivity" />
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SignupActivity" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.AccountActivity" />
        <activity
            android:name=".ui.ChangeEmailActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".ui.ChangePasswordActivity" />
        <activity android:name=".ui.ResetPasswordActivity" />
        <activity android:name=".ui.DeleteAccountActivity"></activity>
    </application>

</manifest>